<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TranAppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/tran_black</item>    <!-- 状态栏 -->
        <item name="colorPrimaryDark">@color/tran_black</item> <!-- toolbar -->
        <item name="colorAccent">@color/colorAccent</item>  <!-- 重点 -->
    </style>

    <style name="ItemType">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="MyTranAppTheme" parent="TranAppTheme"/>

</resources>
