<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ItemView">

        <attr name="showIcon" format="boolean"></attr>
        <attr name="itemIcon" format="reference"></attr>
        <attr name="itemTitle" format="string"></attr>
        <attr name="titleColor" format="color"></attr>
        <attr name="titleSize" format="dimension"></attr>

        <attr name="content" format="string"></attr>
        <attr name="contentColor" format="color"></attr>
        <attr name="contentSize" format="dimension"></attr>
        <attr name="contentLines" format="integer"></attr>
        <attr name="hint" format="string"></attr>
        <attr name="hintContentColor" format="color"></attr>

        <attr name="showImage" format="boolean"></attr>
        <attr name="radius" format="dimension"></attr>
        <attr name="showLine" format="boolean"></attr>


    </declare-styleable>


    <!-- 虚线 -->
    <declare-styleable name="DashView">
        <attr name="dashWidth" format="dimension"/>
        <attr name="dashLineWidth" format="dimension"/>
        <attr name="dashLineHeight" format="dimension"/>
        <attr name="dashLineColor" format="color"/>
        <attr name="dashOrientation" format="integer"/>
    </declare-styleable>


    <!-- 有边框和背景的TextView -->
    <declare-styleable name="BorderTextView">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="strokeColor" format="color"/>
        <attr name="enableBackColor" format="color" />
        <attr name="contentBackColor" format="color"/>
        <attr name="contentPressedColor" format="color"/>
        <attr name="followTextColor" format="boolean"/>
    </declare-styleable>

    <!--音乐播放-->
    <declare-styleable name="MediaView">
        <attr name="color" format="color"></attr>
        <attr name="loca">
            <enum name="center" value="0"></enum>
            <enum name="bottom" value="1"></enum>
        </attr>
    </declare-styleable>

    <!--圆形进度条-->
    <declare-styleable name="RoundProgressBar">
        <attr name="backColor" format="color|reference"/>
        <attr name="frontColor" format="color|reference"/>
        <attr name="textColor" format="color|reference"/>
        <attr name="textSize"/>
        <attr name="borderWidth" format="dimension" />
        <attr name="mode">
            <enum name="STROKE" value="0" />
            <enum name="STROKE_TEXT" value="1" />
            <enum name="FILL" value="2"/>
            <enum name="STROKE_IMAGE" value="3"/>
        </attr>
    </declare-styleable>

    <attr name="textSize" format="dimension"/>

    <declare-styleable name="LoopView">
        <attr name="lineColor" format="color"/>
        <attr name="topBottomTextColor" format="color"/>
        <attr name="centerTextColor" format="color"/>
        <attr name="textSize"/>
        <attr name="canLoop" format="boolean"/>
        <attr name="initPosition" format="integer"/>
        <attr name="drawItemCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SwitchColorView">
        <attr name="switchColor" format="color"/>
        <attr name="switchImage" format="reference"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="is_cover_src" format="boolean" />
        <attr name="is_circle" format="boolean" />
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_top_left_radius" format="dimension" />
        <attr name="corner_top_right_radius" format="dimension" />
        <attr name="corner_bottom_left_radius" format="dimension" />
        <attr name="corner_bottom_right_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="inner_border_width" format="dimension" />
        <attr name="inner_border_color" format="color" />
        <attr name="mask_color" format="color" />
    </declare-styleable>


    <!-- ShadowLayout 阴影 -->
    <declare-styleable name="ShadowLayout">
        <attr name="shadowColor" format="color"/>
        <attr name="shadowDx" format="dimension"/>
        <attr name="shadowDy" format="dimension"/>
        <attr name="shadowRadius" format="dimension"/>
        <attr name="shadowLayoutRadius" format="dimension"/>
        <attr name="shadowHeight" format="dimension"/>
        <attr name="shadowShape">
            <flag name="rectangle" value="0x0001"/>
            <flag name="oval" value="0x0010"/>
        </attr>
    </declare-styleable>

</resources>