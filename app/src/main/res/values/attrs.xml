<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ItemView">

        <attr name="showIcon" format="boolean"></attr>
        <attr name="itemIcon" format="reference"></attr>
        <attr name="itemTitle" format="string"></attr>
        <attr name="titleColor" format="color"></attr>
        <attr name="titleSize" format="dimension"></attr>

        <attr name="content" format="string"></attr>
        <attr name="contentColor" format="color"></attr>
        <attr name="contentSize" format="dimension"></attr>
        <attr name="contentLines" format="integer"></attr>
        <attr name="hint" format="string"></attr>
        <attr name="hintContentColor" format="color"></attr>

        <attr name="showImage" format="boolean"></attr>
        <attr name="radius" format="dimension"></attr>
        <attr name="showLine" format="boolean"></attr>


    </declare-styleable>


    <!-- 虚线 -->
    <declare-styleable name="DashView">
        <attr name="dashWidth" format="dimension"/>
        <attr name="dashLineWidth" format="dimension"/>
        <attr name="dashLineHeight" format="dimension"/>
        <attr name="dashLineColor" format="color"/>
        <attr name="dashOrientation" format="integer"/>
    </declare-styleable>


    <!-- 有边框和背景的TextView -->
    <declare-styleable name="BorderTextView">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="strokeColor" format="color"/>
        <attr name="contentBackColor" format="color"/>
        <attr name="followTextColor" format="boolean"/>
    </declare-styleable>

    <!--音乐播放-->
    <declare-styleable name="MediaView">
        <attr name="color" format="color"></attr>
        <attr name="loca">
            <enum name="center" value="0"></enum>
            <enum name="bottom" value="1"></enum>
        </attr>
    </declare-styleable>

</resources>