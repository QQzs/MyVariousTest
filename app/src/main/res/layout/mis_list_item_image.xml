    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:src="@drawable/mis_btn_unselected"/>-->
    <FrameLayout
        android:id="@+id/fl_select_status_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_select_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_fotomix_selectbox_default"
            android:textColor="@color/color_white"
            android:textSize="15sp"
            android:visibility="gone" />
    </FrameLayout>

    <com.zs.various.imageselector.view.DisableOverlayFrame
        android:id="@+id/disable_overlay_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_more_than_max_count"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_gif_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_gif_identifier"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="3dp"
        android:paddingBottom="3dp"
        android:visibility="gone"/>
</com.zs.various.imageselector.view.SquareFrameLayout>