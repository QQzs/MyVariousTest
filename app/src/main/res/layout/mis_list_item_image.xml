<?xml version="1.0" encoding="utf-8"?>
<com.zs.various.imageselector.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_9B9898"
    android:gravity="center">

    <com.zs.various.imageselector.view.SquaredImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:clipChildren="true"
        android:scaleType="centerInside" />
        <!--android:layout_centerInParent="true" />-->

    <!--<View-->
    <!--android:visibility="gone"-->
    <!--android:id="@+id/mask"-->
    <!--android:background="#88000000"-->
