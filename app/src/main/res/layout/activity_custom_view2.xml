            android:background="@drawable/shape_message_bg"
            android:text="12"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            />


