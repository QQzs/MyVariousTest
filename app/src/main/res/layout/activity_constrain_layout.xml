<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="16:6"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/banner"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:background="@color/color_3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="afaafasgagagaaga"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_header"
            android:layout_marginLeft="10dp"
            app:layout_constraintVertical_chainStyle="spread"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="这是带到好多好多号大师的压抑的八十多白DAU忽视抽时间啊忽的煅"
            app:layout_constraintLeft_toRightOf="@+id/tv_header"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"

            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            />


    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/tv_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/color_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_2"
        app:layout_constraintTop_toBottomOf="@+id/ll_item"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/color_6"
        app:layout_constraintLeft_toRightOf="@+id/tv_1"
        app:layout_constraintRight_toLeftOf="@+id/tv_3"
        app:layout_constraintTop_toBottomOf="@+id/ll_item"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/color_7"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_2"
        app:layout_constraintTop_toBottomOf="@+id/ll_item"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/tv_float"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/color_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.8"/>


    <TextView
        android:id="@+id/tv_tab1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="tab1"
        android:gravity="center"
        android:background="@color/color_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_tab2"
        />

    <TextView
        android:id="@+id/tv_tab2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="tab2"
        android:gravity="center"
        android:background="@color/color_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_tab1"
        app:layout_constraintRight_toLeftOf="@+id/tv_tab3"/>

    <TextView
        android:id="@+id/tv_tab3"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="tab3"
        android:gravity="center"
        android:background="@color/color_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_tab2"
        app:layout_constraintRight_toRightOf="parent"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="400dp"/>


</android.support.constraint.ConstraintLayout>