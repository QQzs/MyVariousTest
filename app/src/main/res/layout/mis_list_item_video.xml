<?xml version="1.0" encoding="utf-8"?>
<com.zs.various.imageselector.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_9B9898"
    android:gravity="center">

    <com.zs.various.imageselector.view.SquaredImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        android:clipChildren="true"
        android:scaleType="centerInside" />
        <!--android:layout_centerInParent="true" />-->

    <com.zs.various.imageselector.view.DisableOverlayFrame
        android:id="@+id/disable_overlay_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/icon_more_than_max_count"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:layout_marginRight="6dp"
        android:paddingLeft="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        android:background="@drawable/mis_view_item_bottom_bg">

        <ImageView
            android:id="@+id/iv_gif_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kl_icon_issue_select_video"
            />
        <TextView
            android:layout_marginLeft="@dimen/dimen_margin_2"
            android:id="@+id/tv_video_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="10sp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


</com.zs.various.imageselector.view.SquareFrameLayout>